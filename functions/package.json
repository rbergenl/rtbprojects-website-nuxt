{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "postinstall": "npm run createfirebaseconfig",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "createfirebaseconfig": "firebase setup:web --json > ./firebase/.firebase-config.json"
  },
  "dependencies": {
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "firebase": "^5.9.0",
    "firebase-admin": "~6.0.0",
    "firebase-functions": "^2.1.0",
    "graphql": "^14.2.0",
    "nuxt": "^2.4.5"
  },
  "private": true,
  "engines": {
    "node": "8"
  }
}
